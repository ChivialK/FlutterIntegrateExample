<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IntegrationTest" parent="Theme.Base.NoActionBar">
        <item name="backgroundColor">@color/color_primary_background</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary_background</item>
        <item name="colorOnPrimary">@color/color_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary_background</item>
        <item name="colorSecondaryVariant">@color/color_background_menu</item>
        <item name="colorOnSecondary">@color/color_text_secondary</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="android:textColorLink">@color/color_text_link</item>
        <item name="android:textSize">@dimen/text_size_normal_16sp</item>
        <!-- Navigation color. -->
        <item name="colorControlNormal">@color/color_text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Button color. -->
        <!--        <item name="android:colorButtonNormal">?attr/colorOnPrimary</item>-->
        <item name="materialButtonStyle">@style/ButtonTextColor.Light</item>
        <!-- Image color. -->
        <item name="drawableTint">@color/color_text_hint</item>
        <item name="iconTint">@color/color_bubble_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonTextColor.Light" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">?attr/colorOnPrimary</item>
        <item name="colorOnPrimary">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_subtitle_18sp</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>
</resources>
